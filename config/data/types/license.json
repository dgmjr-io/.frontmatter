{
    "$id": "https://github.com/dgmjr-io/root/.fontmatter/config/data/types/license.json",
    "$schema": "https://frontmatter.codes/config/data.types.schema.json",
    "id": "license",
    "schema": {
        "type": "enum",
        "items": {
            "$ref": "#/definitions/licenses"
        },
        "properties": {
            "reference": {
                "type": "string",
                "description": "A human-readable HTML version of the license",
                "format": "url"
            },
            "isDeprecatedLicenseId": {
                "type": "boolean",
                "description": "Whether the license is deprecated"
            },
            "detailsUrl": {
                "type": "string",
                "description": "A URL to the license details in JSON format",
                "format": "url"
            },
            "licenseId": {
                "type": "string",
                "description": "The SPDX identifier for the license"
            },
            "seeAlso": {
                "type": "array",
                "description": "A list of URLs to the license",
                "items": {
                    "type": "string",
                    "format": "url"
                }
            }
        }
    },
    "definitions": {
        "licenses": {
            "$ref": "https://raw.githubusercontent.com/sourcemeta/schemas/main/vendor/spdx-3-20/json/licenses.json"
        }
    }
}